	<script>
    function showDirPath(filePath)
    {
        filePath="/files"+filePath;
        var dirArray = filePath.split("/");
        var pathTag="";
        for(var i = 1; i<dirArray.length ; i++)
        {
          var dot ="" ;
          for(var j = 1;j<=i; j++)
          {
           // if(j!=1)
              dot+="/";
            dot+=(dirArray[j]);
          }
          pathTag += "/<a href='"+dot+"''>"+String(dirArray[i])+"</a>";
         
        }
        $('.sub-header').append(pathTag);



    }
		function showFileList(filelist)
    {
            var files =JSON.stringify(filelist);
            console.log(files);
//			
        		for(var i =0;i< filelist.length;i++)
        		{		
        			var item = filelist[i];
        			var link = encodeURI('/files'+item.path);
        			var size;
        			if(item.isDir)
        				size = "";
        			else
        				size = item.size;
        			var appendRow = '<tr>';
        			appendRow+='<td><a href='+link+'>'+item.name+'</a></td>';
        			appendRow+='<td>'+size+'</td>';
        			appendRow+='<td>'+item.createTime+'</td>';
        			appendRow+='</tr>';			
        			 $('#filelistTable').append(appendRow);
        		}
    }
		$(document).ready(function(){	
      var reqPath = "<%-title%>";

			$.ajax({      
		        type:"GET",  
		        url:'/api/file/list'+reqPath,      
		              
		        success:function(args, type){
          if(args.length==1 )
          {
            if(args[0].isDir == false)
            {  
              window.location.assign('/api/file/download'+args[0].path);
              showDirPath(reqPath);
              return;
            }
            
          }
          
					 showFileList(args);
           showDirPath(reqPath);

           return;
				
				}, 
        		error:function(e){  
            			alert(e.responseText);  
        			}  
    			});  
		});
		
	</script>
